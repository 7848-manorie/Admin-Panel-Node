<%- include('./header.ejs') %>

  <main class="app-main">
    <!-- Page Header -->
    <div class="app-content-header mb-4">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="col-sm-6">
            <h3 class="mb-0 fw-semibold">Admin Profile</h3>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-end mb-0">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Profile</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Page Content -->

    <div class="app-content mb-5">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-xl-8 col-lg-9 col-md-10">
            <div class="card shadow-sm rounded-4 border-0">
              <div class="card-body p-4">
                <div class="row g-4 align-items-center">
                  <!-- Avatar Section -->
                  <div class="col-md-4 text-center ">
                    <img src="<%= adminData.avtar %>" alt="Admin Avatar" class="rounded-circle border border-3 p-1"
                      width="130" height="130">
                    <h5 class="mt-3 mb-0 fw-semibold">
                      <%= adminData.name %>
                    </h5>
                    <small class="text-muted">Administrator</small>
                  </div>

                  <!-- Profile Info -->
                  <div class="col-md-8">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h5 class="mb-0 fw-semibold">Profile Information</h5>
                      <!-- <a href="/updateAdmin/?adminId=<%= adminData._id %>" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-pencil-square me-1"></i> Edit
                </a> -->
                    </div>

                    <div class="row">
                      <div class="col-sm-12 mb-3">
                        <label class="text-muted small">Full Name</label>
                        <div class="fw-medium">
                          <%= adminData.name %>
                        </div>
                      </div>
                      <div class="col-sm-12 mb-3">
                        <label class="text-muted small">Email Address</label>
                        <div class="fw-medium">
                          <%= adminData.email %>
                        </div>
                      </div>
                      <div class="col-sm-12 mb-3">
                        <label class="text-muted small">Gender</label>
                        <div class="fw-medium">
                          <%= adminData.gender %>
                        </div>
                      </div>
                      <div class="col-sm-12 mb-3">
                        <label class="text-muted small">Hobby</label>
                        <div class="fw-medium">
                          <%= adminData.hobby %>
                        </div>
                      </div>
                      <div class="col-sm-12 mb-3">
                        <label class="text-muted small">Description</label>
                        <div class="fw-medium">
                          <%= adminData.desc %>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    

    </div>
  </main>

  <%- include('./footer.ejs') %>