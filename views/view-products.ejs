    <!--begin::App Content-->
    <div class="app-content mt-5">
      <!--begin::Container-->
      <div class="container-fluid mb-5">
        <!--begin::Row-->
        <div class="row mb-5">
          <!-- /.col -->
          <div class="col-md-12">
            <div class="card mb-4">
              <div class="card-header">
                <h3 class="card-title">View products Data</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th style="width: 10px">#</th>
                      <th>products Picture</th>
                      <th>products Name</th>
                      <th>Category</th>
                      <th>Sub Category</th>
                      <th>Status</th>

                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var i=1; for(var record of productsData) { %>
                      <tr>
                        <td>
                          <%= i %>
                        </td>
                        <td>
                          <img src="/<%= record.productimg %>" width="40" />
                        </td>
                        <td>
                          <%= record.pname %>
                        </td>
                        <td>
                          <%= record.categoryID?.cname %>
                        </td>
                        <td>
                          <%= record.subcategoryID?.sname %>
                        </td>
                        <td>
                          <%= record.status %>
                        </td>
                        <td>
                          <a href="/products/delete-product/<%= record._id %>" class="text-danger"
                            onclick="return confirm('Are you sure you want to delete this product?')">
                            ‚ùå
                          </a>
                        </td>
                      </tr>
                      <% i++; } %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!--end::Row-->
      </div>
      <!--end::Container-->
    </div>
    <!--end::App Content-->
  </main>
  <!--end::App Main-->

